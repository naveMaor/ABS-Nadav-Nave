      <Button fx:id="closeEntireLoanButton" layoutX="434.0" layoutY="554.0" mnemonicParsing="false" onAction="#activateCloseEntireLoanButton" prefHeight="45.0" style="-fx-border-color: grey;" text="Pay Entire choosen Loan/s" AnchorPane.leftAnchor="434.0" AnchorPane.rightAnchor="209.2" />
      <Button layoutX="451.0" layoutY="376.0" mnemonicParsing="false" onAction="#activateForwardLoanButton" text="&gt;&gt;" />
      <ListView fx:id="LoansListView" layoutX="499.0" layoutY="320.0" prefHeight="204.0" prefWidth="242.0" style="-fx-border-color: grey;" />
      <Button layoutX="451.0" layoutY="441.0" mnemonicParsing="false" onAction="#activateBackwardLoanButton" text="&lt;&lt;" />
      <Label layoutX="581.0" layoutY="300.0" style="-fx-font-size: 15; -fx-font-weight: bold;" text="Choosed loans" textAlignment="CENTER" underline="true" />
      <VBox layoutX="249.0" layoutY="551.0" AnchorPane.bottomAnchor="0.0">
         <children>
            <TextField fx:id="partialAmoutLable" />
            <Button mnemonicParsing="false" onAction="#activatePayPartial" prefHeight="30.0" prefWidth="150.0" text="Pay partial amount">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
